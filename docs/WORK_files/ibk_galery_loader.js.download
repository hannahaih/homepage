document.observe('lightview:opened', function(event) {
	// nun kann der Titel ausgelesen werden und ins Lightwindow eingebaut werden
	var that = event.target;
	if ($(that).hasClassName('ibk_gal0_image') || 
			$(that).hasClassName('ibk_gal1_image') || 
			$(that).hasClassName('ibk_gal2_image') || 
			$(that).hasClassName('ibk_gal3_image') || 
			$(that).hasClassName('ibk_lv_image')) {
		
		if ($(that).hasClassName('ibk_gal0_image')) {
  		var txt   = $(that).next().innerHTML;
  		txt = txt.replace(/\n|\r/g,'<br />');
  	} 
  	else if ($(that).hasClassName('ibk_gal1_image')) {
  		var txt   = $(that).down('.hiddentext').innerHTML;
  	} 
  	else if ($(that).hasClassName('ibk_gal2_image')) {
  		var txt   = $(that).next().innerHTML;
  		txt = txt.replace(/\n|\r/g,'<br />');
  	} 
  	else if ($(that).hasClassName('ibk_gal3_image')) {
  		var txt   = $(that).next().innerHTML;
  		txt = txt.replace(/\n|\r/g,'<br />');
  	} 
  	else if ($(that).hasClassName('ibk_lv_image')) {
  		var txt   = $(that).up().next().innerHTML;
  	}
  	
  	txt = txt.replace(/^\s*/,'').replace(/\s*$/,'');
  	var lv_title = $$('.lv_Title')[0];
  	$(lv_title).setStyle({'lineHeight':'120%'});
  	$(lv_title).update(txt);
  	if (txt != '') {
	  	var lv_center = $$('.lv_Center')[0];
	  	var h = $(lv_center).getHeight();
	  	var c  = $$('.lv_contentTop')[0].down(0);
	  	var ch = $(c).getHeight();
	  	var d = h - ch;
	  	var lh = $(lv_title).getHeight();
	  	if (d - lh < 20) {
	  		h = h + 20 - (d-lh);
	  		$(lv_center).setStyle({'height':h+'px'});
	  	}
  	}
  }
});
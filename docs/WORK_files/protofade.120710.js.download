var Protofade = Class.create({

	initialize: function(element, options) {		
		this.options = {
      		duration: 1,
					delay: 4.0,
					randomize: false,
					autostart:true,
					controls:false,
					eSquare:false,
					eRows: 3, 
					eCols: 5,
					eColor: '#FFFFFF',
					effect: 'grow-center'
    	}
		Object.extend(this.options, options || {});

    this.element        = $(element);
		this.slides			= this.element.childElements();
		this.num_slides		= this.slides.length;		
		this.current_slide 	= (this.options.randomize) ? (Math.floor(Math.random()*this.num_slides)) : 0;
		this.end_slide		= this.num_slides - 1;
		
		this.slides.invoke('hide');
		this.slides[this.current_slide].show();
				
		if (this.options.autostart) { 
			this.startSlideshow();
		}				
		if (this.options.controls) {
			this.addControls();
		}
		
		if (this.options.effect == 'dime') {
			this.buildEsquare();
		}
		
	},
	

	addControls: function() {
		this.wrapper 		= this.element.up();
		this.controls		= new Element('div', { 'class': 'ibk_pf_controls' });
		this.wrapper.insert(this.controls);
		
		// Bildversion erstellen XL
		this.btn_next 		    = new Element('a', { 'class': 'ibk_pf_next', 'title': 'Vor', href: 'javascript:void(0)' }).update('&nbsp;');
		this.btn_previous	    = new Element('a', { 'class': 'ibk_pf_previous', 'title': 'Zurück', href: 'javascript:void(0)' }).update('&nbsp;');
		this.btn_start		    = new Element('a', { 'class': 'ibk_pf_start', 'title': 'Start', href: 'javascript:void(0)' }).update('&nbsp;');
		this.btn_stop		      = new Element('a', { 'class': 'ibk_pf_stop', 'title': 'Stop', href: 'javascript:void(0)' }).update('&nbsp;');

		var allitems  = this.end_slide + 1;
		this.counter_span		  = new Element('span', { 'class': 'ibk_pf_span' }).update('1/' + allitems);
		

		this.btn_next.setStyle({opacity: 0.5});
		this.btn_previous.setStyle({opacity: 0.5});
		this.btn_start.setStyle({opacity: 0.5});
		this.btn_stop.setStyle({opacity: 0.5});

		
		this.btns = [this.btn_previous, this.btn_next, this.btn_start, this.btn_stop, this.counter_span];
		this.btns.each(function(el){
			this.controls.insert(el);
		}.bind(this));
		
		this.btn_previous.observe('click', this.moveToPrevious.bindAsEventListener(this));
		this.btn_next.observe('click', this.moveToNext.bindAsEventListener(this));
		this.btn_start.observe('click', this.startSlideshow.bindAsEventListener(this));
		this.btn_stop.observe('click', this.stopSlideshow.bindAsEventListener(this));
		
	},
	
	// Bildcounter hinzufuegen XL
	
	buildEsquare: function() {		
		this.eSquares 	= [];
		var elDimension	 	= this.element.getDimensions();
		var elWidth  		= elDimension.width;
		var elHeight 		= elDimension.height;
				
		var sqWidth 		= elWidth / this.options.eCols;
		var sqHeight 		= elHeight / this.options.eRows;
	
		$R(0, this.options.eCols-1).each(function(col) {
			this.eSquares[col] = [];							 	
			$R(0, this.options.eRows-1).each(function(row) {
				var sqLeft = col * sqWidth;
			    var sqTop  = row * sqHeight;
				this.eSquares[col][row] = new Element('div').setStyle({
 														    opacity: 0, backgroundColor: this.options.eColor,
															position: 'absolute', 'z-index': 5,
															left: sqLeft + 'px', top: sqTop + 'px',
															width: sqWidth + 'px', height: sqHeight + 'px'		
														});
				this.element.insert(this.eSquares[col][row]);				 							 										 
			}.bind(this))
		}.bind(this));			
	},

	startSlideshow: function(event) {
		if (event) { Event.stop(event); }
  	this.updateSlide(this.current_slide+1);
  	//if (this.good_browser == true)
			this.btn_start.setStyle({opacity: 1.0});
		if (!this.running)	{
			this.executer = new PeriodicalExecuter(function(){
	  			this.updateSlide(this.current_slide+1);
	 		}.bind(this),this.options.delay);
			this.running=true;
		}
	},
	
	stopSlideshow: function(event) {	
		//if (this.good_browser == true)
			this.btn_start.setStyle({opacity: 0.5});
		if (event) { Event.stop(event); } 
		if (this.executer) { 
			this.executer.stop();
			this.running=false;
		}	 
	},

	moveToPrevious: function (event) {
		if (event) { Event.stop(event); }
		this.stopSlideshow();
  		this.updateSlide(this.current_slide-1);
	},

	moveToNext: function (event) {
		if (event) { Event.stop(event); }
		this.stopSlideshow();
  		this.updateSlide(this.current_slide+1);
	},
	
	updateSlide: function(next_slide) {		
		if (next_slide > this.end_slide) { 
			next_slide = 0; 
		} 
		else if ( next_slide == -1 ) {
			next_slide = this.end_slide;
		}	
		
		switch (this.options.effect) {
			case 'swish':
				this.swishInOut(next_slide, this.current_slide);		
			break;
			case 'blind':
				this.blindInOut(next_slide, this.current_slide);		
			break;
			case 'grow-left':
				this.growLeft(next_slide, this.current_slide);		
			break;
			case 'grow-right':
				this.growRight(next_slide, this.current_slide);		
			break;
			case 'grow-center':
				this.growCenter(next_slide, this.current_slide);		
			break;
			case 'fade':
			default:
				this.fadeInOut(next_slide, this.current_slide);		
			break;
		}
		
		
		var item      = this.current_slide + 1;
		var allitems  = this.end_slide + 1
		this.counter_span.update(item + '/' + allitems);
		
	},

 	fadeInOut: function (next, current) {		
		new Effect.Parallel([
			new Effect.Fade(this.slides[current], { sync: true }),
			new Effect.Appear(this.slides[next], { sync: true }) 
  		], { duration: this.options.duration });
		
		this.current_slide = next;		
	},
	
	
	
	
	growLeft: function (next, current) {	
		this.slides[next].setStyle({display: 'none'});

		new Effect.Grow(this.slides[next],{ direction: 'top-left', duration: this.options.duration });
		new Effect.Fade(this.slides[current], { duration: this.options.duration });
		
		this.current_slide = next;		
	},
	
	growRight: function (next, current) {	
		this.slides[next].setStyle({display: 'none'});

		new Effect.Grow(this.slides[next],{ direction: 'bottom-right', duration: this.options.duration });
		new Effect.Fade(this.slides[current], { duration: this.options.duration });
		
		this.current_slide = next;		
	},
	
	growCenter: function (next, current) {		
		this.slides[next].setStyle({display: 'none'});
		
		
		new Effect.Grow(this.slides[next],{ direction: 'center', duration: this.options.duration });
		new Effect.Fade(this.slides[current], { duration: this.options.duration });
		
		this.current_slide = next;		
	},
	
	
	
	blindInOut: function (next, current) {		
		this.slides[next].setStyle({display: 'none'});
		
		new Effect.BlindDown(this.slides[next],{ duration: this.options.duration });
		new Effect.Fade(this.slides[current], { duration: this.options.duration });
		
		this.current_slide = next;		
	},
	
	swishInOut: function (next, current) {		
		
		this.slides[next].setStyle({overflow: 'hidden'});
		this.slides[next].setStyle({width: '0px'});
		this.slides[next].setStyle({display: 'block'});

		new Effect.Morph(this.slides[next], {
		  style: 'width: 100%',
		  duration: this.options.duration 
		});
		new Effect.Fade(this.slides[current], { duration: this.options.duration });
		
		this.current_slide = next;		
	},
	
	delayedAppear: function(eSquare)	{
		var opacity = Math.random();
		new Effect.Parallel([ 
			new Effect.Appear ( eSquare, { from: 0, to: opacity, duration: this.options.duration/4 } ),
			new Effect.Appear ( eSquare, { from: opacity, to: 0, duration: this.options.duration/1.25} )
		], { sync: false });			
	}

});